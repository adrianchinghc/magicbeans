<h1>Listing activities</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Venue</th>
      <th>Description</th>
      <th>Speaker</th>
      <th>Speakerbio</th>
      <th>Biolink</th>
      <th>Keytakeaway</th>
      <th>Prerequisite</th>
      <th>Maxattendee</th>
      <th>Tags</th>
      <th>Resources</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.date %></td>
        <td><%= activity.venue %></td>
        <td><%= activity.description %></td>
        <td><%= activity.speaker %></td>
        <td><%= activity.speakerbio %></td>
        <td><%= activity.biolink %></td>
        <td><%= activity.keytakeaway %></td>
        <td><%= activity.prerequisite %></td>
        <td><%= activity.maxattendee %></td>
        <td><%= activity.tags %></td>
        <td><%= activity.resources %></td>
        <td><%= link_to 'Show', activity_path(activity)  %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

